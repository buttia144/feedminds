{
  "name": "feedingminds",
  "version": "1.0.0",
  "description": "FeedingMinds charity website with MongoDB integration",
  "main": "server.js",
  "dependencies": {
    "@dhiwise/component-tagger": "^1.0.9",
    "@tailwindcss/forms": "^0.5.7",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss-elevation": "^2.0.0",
    "tailwindcss-fluid-type": "^2.0.7"
  },
  "scripts": {
    "build:css": "npx @dhiwise/component-tagger && npx tailwindcss -i ./css/tailwind.css -o ./css/main.css",
    "watch:css": "npx @dhiwise/component-tagger && npx tailwindcss -i ./css/tailwind.css -o ./css/main.css --watch",
    "dev": "nodemon server.js",
    "start": "node server.js",
    "build": "npm run build:css",
    "vercel-build": "npm run build && npm run init-db",
    "init-db": "node scripts/init-db.js"
  },
  "keywords": [
    "charity",
    "mongodb",
    "express",
    "tailwindcss",
    "responsive"
  ],
  "author": "FeedingMinds",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/line-clamp": "^0.1.0",
    "@tailwindcss/typography": "^0.5.16",
    "nodemon": "^3.0.1",
    "tailwindcss": "^3.4.17"
  }
}
